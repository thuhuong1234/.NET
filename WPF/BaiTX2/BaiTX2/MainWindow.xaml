        <TextBox Name="tbxMaLoai" HorizontalAlignment="Left" Margin="300,119,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="30" Width="120"/>
        <TextBox Name="tbxTenLoai" HorizontalAlignment="Left" Margin="300,164,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="30" Width="120" TextChanged="TextBox_TextChanged_1"/>

    </Grid>
</Window>
