        <TextBox HorizontalAlignment="Left" Name="txtHoDem" Margin="274,70,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="159" Height="37" TextChanged="TextBox_TextChanged_1"/>
