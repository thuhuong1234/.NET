        <Button  Name ="btnNhaplai" Content="Nhập lại" HorizontalAlignment="Left" Margin="297,311,0,0" VerticalAlignment="Top" Width="100"/>
        <ComboBox HorizontalAlignment="Left" Name="cboQueQuan" Margin="294,249,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0">
            <ComboBoxItem>Hà Nội</ComboBoxItem>
            <ComboBoxItem>Hải Phòng</ComboBoxItem>
            <ComboBoxItem>Nam Định</ComboBoxItem>
            <ComboBoxItem>Hải Dương</ComboBoxItem>
            <ComboBoxItem>Hòa Bình</ComboBoxItem>


        </ComboBox>
        <Image Height="100" Width="100"/>


    </Grid>
</Window>
